<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.projectuas.sukma.apollo.Review">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:theme="?attr/actionBarTheme"
        />

    <TextView
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        />

    <TextView
        android:id="@+id/telp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/review" />

    <Button
        android:id="@+id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hubungi"
        android:onClick="contactDirectly"
        android:layout_below="@+id/telp"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bt"
        android:layout_marginLeft="15dp"/>


    <Button
        android:id="@+id/bt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menuju Lokasi"
        android:onClick="destination"
        android:layout_below="@+id/maps"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
